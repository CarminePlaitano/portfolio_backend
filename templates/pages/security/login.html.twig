{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block main_container %}
	<main class="form-login w-75 m-auto">

		<div class="mb-3 text-center">
			<h1>carmineplaitano.it - CMS</h1>
			<h5>Login</h5>
            <a class="mt-3" href={{ path('app_signup') }}>Sign up</a>
		</div>

		{% if error is defined and error %}
			<div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% include('pages/security/_partials/form.login.html.twig') %}
	</main>
{% endblock %}
