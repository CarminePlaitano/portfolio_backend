{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Custom styles for this template -->
    <link href="{{ asset('admin/css/login/sign-in.css') }}" rel="stylesheet">
{% endblock %}

{% block body_class %}d-flex h-100 align-items-center{% endblock %}

{% block main_section %}
    <main class="form-signin w-100 m-auto">
        {% if error is defined and error %}
            <div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form method="post" action="{{ path('app_admin_login') }}" class="text-center">
            <img class="mb-4" src="{{ asset('img/logo/localero-logo-v4.svg') }}" alt="Localero logo" width="220">

            <div class="form-floating">
                <input type="email" class="form-control" id="floatingInput" name="_username" placeholder="name@example.com">
                <label for="floatingInput">{% trans from 'AppBackGlobal' %}Email address{% endtrans %}</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="floatingPassword" name="_password" placeholder="Password">
                <label for="floatingPassword">{% trans from 'AppBackGlobal' %}Password{% endtrans %}</label>
            </div>

            <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" name="_remember_me" checked="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">{% trans from 'AppBackGlobal' %}Remember me{% endtrans %}</label>
            </div>
            <button class="btn btn-primary w-100 py-2" type="submit">{% trans from 'AppBackGlobal' %}Sign in{% endtrans %}</button>
            <p class="mt-3 mb-0">Forgot your password? <a href="#">Recover it here</a></p>
            <p class="mt-5 mb-3">&copy; 2017â€“{{ 'now'|date('Y') }}</p>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
    </main>
{% endblock %}