{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block main_container %}
	<main class="form-signin w-75 m-auto">
		{% if error is defined and error %}
			<div class="alert alert-danger mt-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<div class="mb-3 text-center">
			<h1>carmineplaitano.it - CMS</h1>
			<h5>Login</h5>
            <a class="mt-3" href={{ path('app_signup') }}>Sign up</a>
		</div>

		<form method="post" action="{{ path('app_login') }}" class="text-center">
			<div class="d-flex flex-column align-items-start mb-3">
				<label for="email">Email address</label>
				<input type="email" class="form-control" id="email" name="_email" placeholder="name@example.com">
			</div>
			<div class="d-flex flex-column align-items-start mb-3">
				<label for="password">Password</label>
				<input type="password" class="form-control" id="password" name="_password" placeholder="Password">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button class="btn btn-primary w-100 py-2" type="submit">Log in</button>
		</form>
	</main>
{% endblock %}
