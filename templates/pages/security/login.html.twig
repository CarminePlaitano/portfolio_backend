{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block main_container %}
	<main class="form-login w-75 m-auto">

		<div class="mb-3 text-center">
			<h1>carmineplaitano.it - CMS</h1>
			<h5>Log in</h5>
			<a class="mt-3" href={{ path('app_signup') }}>Sign Up</a>
		</div>

		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<div class="text-center">
				<label for="username">Email</label>
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>

				<div data-controller="password-visibility" class="position-relative">
					<label for="password">Password</label>
					<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" data-password-visibility-target="input" required>
					<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
					<i class="fas fa-eye position-absolute end-0 translate-middle-y me-3" data-password-visibility-target="icon" data-action="click->password-visibility#toggle" style="top: 45px;"></i>
				</div>
				<div class="checkbox mb-3">
					<input type="checkbox" name="_remember_me" id="_remember_me">
					<label for="_remember_me">Remember me</label>
				</div>

				<button type="submit" class="btn btn-primary w-100 py-2" data-email-check-target="submit">Log in</button>
			</div>
		</form>
	</main>
{% endblock %}
